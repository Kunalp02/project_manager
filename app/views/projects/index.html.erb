<h1> Major Projects</h1>

<% if @projects.empty? %>
  <p>No projects found. You can create a new project below.</p>
<% else %>
<table class="table">
<thead>
  <tr>
    <th>Name of project</th>
    <th>Description of the project</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.description %></td>
      <td><%= link_to 'Show', project, class: 'btn btn-primary' %></td>
      <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-secondary' %></td>
      <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
</tbody>
</table>

<% end %>

<br>

<%= link_to 'New Project', new_project_path %>
